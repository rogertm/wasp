#!/usr/bin/env php
<?php
require __DIR__ . '/../vendor/autoload.php';

use Symfony\Component\Console\Application;
use WaspCli\Command\RenameProjectCommand;
use WaspCli\Command\CreatePostTypeCommand;
use WaspCli\Command\CreateTaxonomyCommand;
use WaspCli\Command\CreateMetaBoxCommand;
use WaspCli\Command\CreateTermMetaCommand;
use WaspCli\Command\CreateAdminPageCommand;
use WaspCli\Command\CreateAdminSubPageCommand;

$app = new Application( 'WASP CLI', '1.0.0' );
$app->add( new RenameProjectCommand() );
$app->add( new CreatePostTypeCommand() );
$app->add( new CreateTaxonomyCommand() );
$app->add( new CreateMetaBoxCommand() );
$app->add( new CreateTermMetaCommand() );
$app->add( new CreateAdminPageCommand() );
$app->add( new CreateAdminSubPageCommand() );
$app->run();
